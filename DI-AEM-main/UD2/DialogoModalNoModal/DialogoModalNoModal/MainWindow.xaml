        xmlns:local="clr-namespace:DialogoModalNoModal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="325,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblNombre" Content="Introduce tu nombre" HorizontalAlignment="Left" Margin="325,143,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSaludar" Content="Saludar" HorizontalAlignment="Left" Margin="275,217,0,0" VerticalAlignment="Top" Width="85" Click="btnSaludar_Click" Height="27"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="400,217,0,0" VerticalAlignment="Top" Width="85" Click="btnSalir_Click" Height="27"/>

    </Grid>
</Window>
