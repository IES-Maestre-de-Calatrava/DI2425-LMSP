<Window x:Class="UtiliarLista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtiliarLista"
        mc:Ignorable="d"
        Title="Utilizar Lista" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblEscribeTitulo" Content="Escribe el título de la película" HorizontalAlignment="Left" Margin="102,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTituloPelicula" HorizontalAlignment="Left" Margin="102,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="578"/>
        <Button x:Name="btnAniadir" Content="Añadir" HorizontalAlignment="Left" Margin="102,184,0,0" VerticalAlignment="Top" Width="578" Click="btnAniadir_Click"/>
        <ComboBox x:Name="cmbPeliculas" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="298" SelectionChanged="cmbPeliculas_SelectionChanged"/>
        <Label x:Name="lblInfo" Content="Elegir en el combox para añadir a la lista" HorizontalAlignment="Left" Margin="102,258,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstPeliculas" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="251,299,251,21"/>

    </Grid>
</Window>
