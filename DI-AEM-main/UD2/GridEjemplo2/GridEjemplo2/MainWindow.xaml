<Window x:Class="GridEjemplo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridEjemplo2"
        mc:Ignorable="d"
        Title="Contenedor Grid" Height="450" Width="800">
    <Grid Name="contenedor">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="64*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" Margin="126,88,126,113" Grid.Column="1" Click="Button_Click" Content="BTN 01"/>
        <Button Grid.Column="2" Grid.Row="0" Margin="58,92,58,93" Content="BTN 02"/>
    </Grid>
</Window>
