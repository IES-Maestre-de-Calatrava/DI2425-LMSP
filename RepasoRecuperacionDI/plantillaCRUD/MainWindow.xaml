<Window x:Class="plantillaCRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plantillaCRUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AntiqueWhite">
        <StackPanel>
            <Label Content="Nombre" />
            <TextBox x:Name="txtNombre" Margin="10" />
            <Label Content="Fecha" />
            <DatePicker x:Name="dpFecha" Margin="10"/>
            <Label Content="Combo"/>
            <ComboBox x:Name="cbCombo" Margin="10" >
                <ComboBoxItem Content="Item 1"/>
                <ComboBoxItem Content="Item 2"/>
                <ComboBoxItem Content="Item 3"/>
            </ComboBox>
            <Label Content="Numero"/>
            <TextBox x:Name="txtNumero" Margin="10"/>
            <Button Content="Guardar" Click="Button_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
