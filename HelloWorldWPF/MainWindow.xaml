<Window x:Class="HelloWorldWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="343*"/>
        </Grid.ColumnDefinitions>
        <Button  Grid.Column="1" Content="Acciona para saludo" HorizontalAlignment="Left" Margin="29,100,0,0" VerticalAlignment="Top" Height="80" Width="120" Click="Button_Click" RenderTransformOrigin="0.102,0.947" Name="btnHello"/>
        <Label Name="lblHello" Grid.Column="1" Content="Label" HorizontalAlignment="Center" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <Button  Grid.Column="1" Content="Acciona para despedir" HorizontalAlignment="Left" Margin="525,100,0,0" VerticalAlignment="Top" Height="80" Width="120" Click="Button_Bye" RenderTransformOrigin="0.102,0.947" x:Name="btnBye"/>

    </Grid>
</Window>
